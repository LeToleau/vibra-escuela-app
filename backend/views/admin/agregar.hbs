<div class="container pagescape">
    <div class="row add">
        <div class="col-6">
            <h4>Agregar una nueva Promocion</h4>
            <form class="add-promo" action="/admin/promociones/agregar" method="post" enctype="multipart/form-data" />
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Titulo" name="title">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Descripcion" name="description" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Precio" name="price"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
    </div>
    {{#if error}}
        <h5 class="text-center">{{message}}</h5>
    {{/if}}
</div>