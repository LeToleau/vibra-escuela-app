<div class="container pagescape">
    <div class="row add">
        <div class="col-6">
            <h4>Modificar Promocion</h4>
            <form class="add-promo" action="/admin/promociones/modificar" method="post" enctype="multipart/form-data" />
                <input type="hidden" name="id" value="{{promo.id_promo}}">
                <div class="form-group">
                    <input type="text" class="form-control"  name="title" value="{{promo.title}}">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" name="description"rows="10">{{promo.description}}</textarea>
                </div>
                <div class="form-group">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen"></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1"> Eliminar imagen</label>
                        <input type="hidden" name="img_original" value="{{promo.image}}">
                    </p>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="price" value="{{promo.price}}">
                </div>
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            </form>
        </div>
    </div>
    {{#if error}}
        <h5 class="text-center">{{message}}</h5>
    {{/if}}
</div>